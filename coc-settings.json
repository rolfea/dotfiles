{
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  "eslint.workingDirectories": [
    "apps/api",
    "apps/dashboard",
    "apps/marketing",
    "apps/automations",
